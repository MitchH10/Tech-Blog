<div class="login-card">
    <h2 class="page-title">Update Post</h2>
    <form class="post-form">
      <div class="form-group">
        <label>Title:</label>
        <input class="form-input" type="text" id="title" value="{{post.title}}"/>
      </div>
      <div class="form-group">
        <label>Content:</label>
        <input class="form-input" type="text" id="contentss" value="{{post.contents}}"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Update</button>
        <a href="/post/{{post.id}}"><button class="btn btn-primary" type="button">Cancel</button></a>
      </div>
    </form>
  </div>
</div>

<script src="/js/postUpdate.js"></script>